@model PostEditViewModel

@{
    ViewBag.Title = "Post";
}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/tinymce/jquery.tinymce.min.js"></script>
    <script>
        $(function () {
            $("#tinyMCE").tinymce({});
        });
    </script>
}

<h2>Create Post</h2>
<div style="margin-top:80px"></div>

<form method="post" enctype="multipart/form-data" style="margin-top:50px">
    @Html.ValidationSummary(false)

    <div class="form-group">
        @Html.LabelFor(p => p.Title, "Title")
        @Html.TextBoxFor(p => p.Title, new { @class = "form-control", placeholder = "Title" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Body, "Body")
        @Html.TextAreaFor(p => p.Body, new { id = "tinyMCE", @class = "form-control", placeholder = "Body", rows = 5, columns = 5 })
        <div class="form-group">
            @Html.LabelFor(p => p.Published, "Published")
            @Html.CheckBoxFor(p => p.Published, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <input type="file" name="Media" />
        </div>

        <div class="">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
</form>